<!-- On inclus le contenu dans un row et une colonne pour limiter la largeur -->
<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<!-- Le titre de la page -->
			<h3 class="card-title text-center m-4">Ajouter un nouvel évènement</h3>



			<!-- Zone du formulaire -->
			<%= form_tag url_for(action: 'create'), method: "post" do %>

			<%= label_tag 'Titre' %>
			<%= text_field_tag 'title', @event.title, class: "form-control" %>
			<br /> <br />

			<%= label_tag 'Texte' %>
			<%= text_area_tag 'description', @event.description, class: "form-control"  %>
            <br /> <br />
            
            <%= label_tag 'Date' %>
			<%= text_field_tag 'start_date', @event.start_date, class: "form-control" %>
            <br /> <br />

            <%= label_tag 'Durée' %>
			<%= text_field_tag 'duration', @event.duration, class: "form-control" %>
            <br /> <br />
            
            <%= label_tag 'Lieu' %>
			<%= text_field_tag 'location', @event.location, class: "form-control" %>
            <br /> <br />
            
            <%= label_tag 'Prix' %>
			<%= text_field_tag 'price', @event.price, class: "form-control" %>
			<br /> <br />

			<%= submit_tag "Ajouter l'évènement", class: "btn btn-primary" %>

			<% end %>

			<!-- Pour afficher les erreurs possibles -->
			<% if @event.errors.any? %>

			<div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
				<p><strong>We couldn't create the event for the following reason(s) :</strong></p>
				<ul>
					<% @event.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<% end %>
				</ul>
			</div>

			<% end %>

		</div>
	</div>
</div>
