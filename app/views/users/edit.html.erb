<!-- On inclus le contenu dans un row et une colonne pour limiter la largeur -->
<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<!-- Le titre de la page -->
			<h3 class="card-title text-center m-4">Modifier mes infos</h3>

			<!-- Zone du formulaire -->
			<%= form_tag url_for(action: 'update'), method: "patch" do %>
			
			<%= label_tag 'PrÃ©nom' %>
			<%= text_field_tag 'first_name',  @user.first_name, class: "form-control" %>
            <br/>
            
            <%= label_tag 'Nom de famille' %>
			<%= text_field_tag 'last_name',  @user.last_name, class: "form-control" %>
            <br/>

			<%= label_tag 'Description' %>
			<%= text_area_tag 'description', @user.description, class: "form-control" %>
			<br/>

			<%= submit_tag "Confirmer", class: "btn btn-primary" %>

			<% end %>

			<!-- Pour afficher les erreurs possibles -->
			<% if @user.errors.any? %>

			<div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
				<p><strong>We couldn't edit the user infos for the following reason(s)</strong></p>
				<ul>
					<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<% end %>
				</ul>
			</div>

			<% end %>

		</div>
	</div>
</div>